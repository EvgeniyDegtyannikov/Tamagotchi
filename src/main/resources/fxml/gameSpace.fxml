<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:controller="sample.gui.controllers.GameSpaceController"
            xmlns:fx="http://javafx.com/fxml">
    <left>
        <VBox>
            <Button prefWidth="100" prefHeight="100" maxHeight="Infinity" text="Feed" onAction="#feedPet"/>
        </VBox>
    </left>
    <center>
        <Pane>
            <ImageView fx:id="backgroundImage" preserveRatio="true" fitWidth="625" fitHeight="450"/>
            <ImageView fx:id="petsModelImage"/>
            <ImageView fx:id="foodImage"/>
        </Pane>
    </center>
    <right>
        <VBox style="-fx-background-color: white" prefWidth="75">
            <ImageView fx:id="moodIcon" preserveRatio="true" fitWidth="50" fitHeight="50"/>
        </VBox>
    </right>
</BorderPane>
