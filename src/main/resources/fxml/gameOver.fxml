<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<BorderPane fx:controller="sample.gui.controllers.GameOverController"
            xmlns:fx="http://javafx.com/fxml" style="-fx-background-color: white">
    <center>
        <VBox>
            <Label fx:id="title"/>
            <ImageView fx:id="deathImage" preserveRatio="true" fitWidth="300" fitHeight="300"/>
            <Label fx:id="deathReason"/>
            <Label fx:id="waitingAfterDeathTextProperty"/>
            <Button fx:id="goToGameMenuButton" text="OK" visible="false" onAction="#goToGameMenu"/>
        </VBox>
    </center>
</BorderPane>
